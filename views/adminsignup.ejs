<%- include('partials/header')%>
    <%- include('partials/preloader')%>

    <main id="adminsignup">
        <form action="/adminsignup" method="post">
            <h1><img src="/images/add-user.png" alt="" class="signInUpIMG">tutor signup</h1>
            <% if(error) {%>
                <p class="error"><%= message %></p>
            <% } %>
            <input type="text" name="name" id="" value="<%= admin.name %>" placeholder="Full Name" required>
            <input type="email" name="email" id="" value="<%= admin.email %>" placeholder="Email Address" required>
            <input type="password" name="password" id="" value="<%= admin.password %>" placeholder="Your Password" required >
            <input type="password" name="confirmPassword" id="" value="<%= admin.confirmPassword %>" placeholder="Confirm Your Password" required >
            <input type="password" name="adminPin" value="<%= admin.pin %>" id="" placeholder="Enter Admin pin">
            <input type="submit" value="signup">
            <div class="form-btwn">
                <a href="/adminlogin" class="btn41-43 btn-41">tutor signin</a>
                <a href="/signup" class="btn41-43 btn-41">student signup</a>
            </div>
        </form>
    </main>

<%- include('partials/footer')%>